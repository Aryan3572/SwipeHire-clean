generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid())
  name           String
  email          String   @unique
  password       String
  resumeUrl      String?
  skills         String[] @default([])
  rolePreference String?
  lookingFor     String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Add this line (relation back to SwipedJob)
  swipes SwipedJob[]
}

model SwipedJob {
  id        String   @id @default(uuid())
  userId    String
  jobId     String
  action    String // "like" or "skip"
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
